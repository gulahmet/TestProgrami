@model IEnumerable<TestProgrami.Models.Ogrenci>
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src="~/Scripts/jquery-3.0.0.min.js"></script>*@
<script src="~/Scripts/Datattable.js"></script>
@*<script src="https://cdn.datatables.net/1.10.9/js/dataTables.jqueryui.min.js"></script>*@
<link href="https://cdn.datatables.net/1.10.9/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="//code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<head>
    <link href="~/Scripts/StyleSheet2.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<div>
    <button class="open-button" onclick="openForm()">Yeni Öğrenci Kaydet</button>
        <div class="form-popup" id="myForm">
            <form class="form-container">
                <h1 class="container"></h1>
                <div>
                    <label for="psw"><b>Ad</b></label>
                @*    <input type="text"  id="txtAd" placeholder="Ad" name="Ad" required>*@
                    <input required type="text" data-val="true" data-val-required="The Full Name field is required." id="txtAd" name="Name" value="" />
                </div>
                <div>
                </div>
                <div>
                    <label for="psw"><b>Soyad</b></label>
                    <input required type="text" data-val="true" data-val-required="The Full Name field is required." id="txtSoyad" name="Name" value="" />
        
                </div>
                <div>
                </div>
                <div>
                    <label for="psw"><b>Yaş</b></label>
                    <input required type="text" id="txtyas" data-val="true" pattern="\d{2}" title="Bu input'a sadece 2  sayısal karakterlideğer girilebilir"  name="Name" value="" />
                </div>
                <div>
                </div>
                <div>
                    <label for="psw"><b>Adres</b></label>
                    <br />
                    <textarea required id="txtadres"  rows="3" cols="40" data-val-required="Lütfen Adres Giriniz" placeholder="Adres......." ></textarea><br />
                </div>
                <div>
                </div>
                <br />
                <button type="submit" id="btnShow" class="btn">Kaydet</button>
                <button type="button" class="btn cancel" onclick="closeForm()">Çıkış</button>
            </form>
        </div>
    </div>
<script src="~/Scripts/bootbox.js"></script>
<script src="~/Scripts/DatatableScript.js"></script>
<script src="~/Scripts/AnasayfaPost.js"></script>
<script src="~/Scripts/bootbox.min.js"></script>
<table class="table table-hover" id="datatable">
    <thead>
        <tr class="table table-sm table-dark">
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Yaş</th>
            <th scope="col">Adres</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model)
        {
        <tr class="table-active">
            <td scope="row">@ogr.Ad</td>
            <td>@ogr.Soyad</td>
            <td>@ogr.Yas</td>
            <td>@ogr.Adres</td>
        </tr>
        }
    </tbody>
</table>
<br />
